<div id="chatroom_container" class="columns">
  <!-- side panel -->
  <div id="side_panel" class="column is-3 is-narrow" style="width: 350px;">
    <h5 class="block title"> Hi, <%= current_user.name || current_user.email %> ! </h5>
    <h4 class="title is-4"> Users </h4>
    <%= turbo_stream_from "users" %>
    <div id="users" class="block">
      <%= render @users %>
    </div>
    <h4 class="title is-4"> Public Rooms </h4>
    <%= render partial: 'layouts/new_room_form' %>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms">
      <%= render @rooms%>
    </div>
  </div>
  <!-- actual room -->
  <div id="room_container" class="column">
    <% if @single_room %>
      <div id="single_room">
        <h4 class="title">
          <%= @user&.email || @single_room.name %> 
        </h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages" data-controller="scroll">
          <%= render @messages %>
        </div>
        <%= render partial: 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>