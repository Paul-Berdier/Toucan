<%= simple_form_for(@touc) do |f| %>
  <% f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :touc, label: "Touc about it", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new touc...", autofocus: true%>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>