      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">

    </div>
    </article>
</div>

<% @toucs.each do | touc |%>
  <div class="box">
    <article class="">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Paul Berdier</strong>
          <small>@email</small>
          <p><%= touc.touc %></p>
        </div>
      </div>
      <nav class="level">
        <nav class="level-left is-mobile">
          <%= link_to touc, class: "level-item" do %>
            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to edit_touc_path(touc), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to touc, method: :delete, data: { confirm: "Are you sure you want to delete this touc ?"} do %>
            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
          <% end %>
            </nav>
      </nav>
    </article>
  </div>
<% end %>