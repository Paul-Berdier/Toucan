<div class="column is-half">
  <% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%=render 'toucs/form' %>
    </div>
    </article>
    <% end %>


<% @toucs.each do | touc |%>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= gravatar_image_tag(touc.user.email, size: 64, alt: touc.user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= touc.user.name %></strong><br />
          <small><%= touc.user.username %></small><br />
          <p><%= touc.touc %></p>
        </div>
        <% if user_signed_in? %>
      <nav class="level">
        <div class="level-left is-mobile">
          <%= button_to 'Like', touc_likes_path(touc), method: :touc %>
          <%= touc.likes.count %>
          <%#= link_to  touc_likes_path(touc), class: "level-item" do %>
<!--            <span class="icon"><i class="fa fa-thumbs-up" aria-hidden="true"><%#= touc.likes.count %></i></span>-->
          <%# end %>
          <%#= link_to touc, class: "level-item" do %>
<!--            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>-->
          <%# end %>
          <%= link_to edit_touc_path(touc), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to touc, method: :delete, data: { confirm: "Are you sure you want to delete this touc ?"} do %>
            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
          <% end %>
        </div>
        <% end %>
      </nav>
    </div>
    </article>
  </div>
<% end %>
</div>